<?xml version="1.0"?>
<ruleset name="S3 PHP Library">
    <description>PHP CodeSniffer rules for S3 PHP Library</description>

    <!-- Include PSR-12 standard -->
    <rule ref="PSR12"/>

    <!-- Files to check -->
    <file>lib</file>
    <file>tests</file>
    <file>example.php</file>

    <!-- Exclude vendor directory -->
    <exclude-pattern>vendor/*</exclude-pattern>

    <!-- Show progress -->
    <arg value="p"/>

    <!-- Show sniff codes in all reports -->
    <arg value="s"/>

    <!-- Show colors -->
    <arg value="n"/>

    <!-- Show source codes in all reports -->
    <arg value="v"/>

    <!-- Ignore warnings for now -->
    <arg value="w"/>
</ruleset> 